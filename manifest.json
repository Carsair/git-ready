{
  "manifest_version": 2,
  "name": "Github Mark Read Complete Comments",
  "version": "1.0.0",
  "description": "Allows users to mark and collapse github PR comments when they are read or completed.",
  "browser_action": {
    "default_title": "Github Mark Read Complete Comments"
  },
  "icons": {
    "16": "images/gmrcc-icon-16.png",
    "48": "images/gmrcc-icon-48.png",
    "128": "images/gmrcc-icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://github.com/*/pull/*"],
      "js": ["jquery-2.1.3.min.js", "gmrcc.js"],
      "run_at": "document_end",
      "all_frame": false
    }
  ]
}
